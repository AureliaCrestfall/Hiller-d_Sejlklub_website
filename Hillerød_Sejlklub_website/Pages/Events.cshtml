@model Hillerød_Sejlklub_website.Pages.EventsModel
@{
}
<link href="~/css/stylesheet.css" rel="stylesheet" />

<!DOCTYPE html>

<html>

<h1 class="text-center">Hillerød Sejlklubs begivenheder</h1>
<p class="text-center">Se hvad der sker i klubben her</p>


<container-sm>
    <div class="text-center">
        <h1>add member</h1>
    </div>

    <div class="card shadow-sm">
        <div class="card-body text-center">
            <form method="post">
                <div class="form-group container-fluid">
                    <label for="inputDateTime">Starttid: </label>
                    <input type="datetime" asp-for="eventure.StartTime" aria-describedby="dateTimeHelp" placeholder="Skriv starttidspunkt" step="3600">
                    <label for="inputDateTime">Sluttid: </label>
                    <input type="datetime" asp-for="eventure.EndTime" aria-describedby="dateTimeHelp" placeholder="Skriv sluttidspunkt" step="3600" />
                </div>
                
                <div class="form-group container-fluid">
                    <label for="inputDateTime">Lokation: </label>
                    <input type="text" asp-for="eventure.Location" aria-describedby="dateTimeHelp" placeholder="Indtast lokation" step="3600">
                </div>

                <div class="form-group mt-2">
                    <label for="inputComment">Indtast eventnavn: </label>
                    <input type="text" asp-for="eventure.Name" id="inputForm" aria-describedby="textHelp" placeholder="Indtast eventnavn" multiple style="width:200px;">
                    <label for="inputComment">Tmp: </label>

                    <input type="text" asp-for="eventure.Picture" id="inputForm" aria-describedby="textHelp" placeholder="Enter picturepath">

                </div>
                <button type="submit" class="btn btn-primary mt-5">Submit</button>
            </form>
            </<div>
            </div>
</container-sm>
